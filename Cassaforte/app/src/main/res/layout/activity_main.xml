<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layoutMainActivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bgCassaforte"
    tools:context="cassaforte.daminatoluca.it.cassaforte.MainActivity">

    <ImageView
        android:id="@+id/cassaforte"
        android:layout_width="400dp"
        android:layout_height="500dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="false"
        android:layout_marginTop="5dp"
        android:adjustViewBounds="false"
        app:srcCompat="@drawable/cassaforte_chiusa" />

    <TextView
        android:id="@+id/codice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/cassaforte"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70dp"
        android:paddingLeft="5dp"
        android:textColor="@color/rosso"
        android:textSize="28sp" />

    <GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="false"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="270dp"
        android:columnCount="3"
        android:paddingLeft="5dp"
        android:rowCount="4">

        <Button
            android:id="@+id/b1"
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:layout_column="0"
            android:layout_marginBottom="3dp"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:layout_marginTop="3dp"
            android:layout_row="0"
            android:background="@drawable/pulsante_cassaforte_grande"
            android:onClick="bottoniNumeri"
            android:text="1"
            android:textColor="@android:color/background_light"
            android:textSize="25sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/b2"
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:layout_column="1"
            android:layout_marginBottom="3dp"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:layout_marginTop="3dp"
            android:layout_row="0"
            android:background="@drawable/pulsante_cassaforte_grande"
            android:onClick="bottoniNumeri"
            android:scaleType="fitCenter"
            android:text="2"
            android:textColor="@android:color/background_light"
            android:textSize="25sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/b3"
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:layout_column="2"
            android:layout_marginBottom="3dp"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:layout_marginTop="3dp"
            android:layout_row="0"
            android:background="@drawable/pulsante_cassaforte_grande"
            android:onClick="bottoniNumeri"
            android:scaleType="fitCenter"
            android:text="3"
            android:textColor="@android:color/background_light"
            android:textSize="25sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/b4"
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:layout_column="0"
            android:layout_marginBottom="3dp"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:layout_marginTop="3dp"
            android:layout_row="1"
            android:background="@drawable/pulsante_cassaforte_grande"
            android:onClick="bottoniNumeri"
            android:scaleType="fitCenter"
            android:text="4"
            android:textColor="@android:color/background_light"
            android:textSize="25sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/b5"
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:layout_column="1"
            android:layout_marginBottom="3dp"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:layout_marginTop="3dp"
            android:layout_row="1"
            android:background="@drawable/pulsante_cassaforte_grande"
            android:onClick="bottoniNumeri"
            android:scaleType="fitCenter"
            android:text="5"
            android:textColor="@android:color/background_light"
            android:textSize="25sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/b6"
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:layout_column="2"
            android:layout_marginBottom="3dp"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:layout_marginTop="3dp"
            android:layout_row="1"
            android:background="@drawable/pulsante_cassaforte_grande"
            android:onClick="bottoniNumeri"
            android:scaleType="fitCenter"
            android:text="6"
            android:textColor="@android:color/background_light"
            android:textSize="25sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/b7"
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:layout_column="0"
            android:layout_marginBottom="3dp"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:layout_marginTop="3dp"
            android:layout_row="2"
            android:background="@drawable/pulsante_cassaforte_grande"
            android:onClick="bottoniNumeri"
            android:scaleType="fitCenter"
            android:text="7"
            android:textColor="@android:color/background_light"
            android:textSize="25sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/b8"
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:layout_column="1"
            android:layout_marginBottom="3dp"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:layout_marginTop="3dp"
            android:layout_row="2"
            android:background="@drawable/pulsante_cassaforte_grande"
            android:onClick="bottoniNumeri"
            android:scaleType="fitCenter"
            android:text="8"
            android:textColor="@android:color/background_light"
            android:textSize="25sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/b9"
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:layout_column="2"
            android:layout_marginBottom="3dp"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:layout_marginTop="3dp"
            android:layout_row="2"
            android:background="@drawable/pulsante_cassaforte_grande"
            android:onClick="bottoniNumeri"
            android:scaleType="fitCenter"
            android:text="9"
            android:textColor="@android:color/background_light"
            android:textSize="25sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/bCancellaTutto"
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:layout_column="0"
            android:layout_marginBottom="3dp"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:layout_marginTop="3dp"
            android:layout_row="3"
            android:background="@drawable/pulsante_cassaforte_grande"
            android:onClick="bottoneCancellaTutto"
            android:text="C"
            android:textColor="@android:color/background_light"
            android:textSize="25sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/b0"
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:layout_column="1"
            android:layout_marginBottom="3dp"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:layout_marginTop="3dp"
            android:layout_row="3"
            android:background="@drawable/pulsante_cassaforte_grande"
            android:onClick="bottoniNumeri"
            android:scaleType="fitCenter"
            android:text="0"
            android:textColor="@android:color/background_light"
            android:textSize="25sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/bCancella"
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:layout_column="2"
            android:layout_marginBottom="3dp"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:layout_marginTop="3dp"
            android:layout_row="3"
            android:background="@drawable/pulsante_cassaforte_grande"
            android:onClick="bottoneCancella"
            android:scaleType="fitCenter"
            android:text="&lt;-"
            android:textColor="@android:color/background_light"
            android:textSize="25sp"
            android:textStyle="bold" />

    </GridLayout>

</RelativeLayout>
