<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Fai vibrare tutto!"
        android:id="@+id/testo1"
        android:layout_gravity="center"
        android:layout_marginBottom="230dp"
        android:singleLine="true"
        android:textIsSelectable="false"
        android:textStyle="bold"
        android:textSize="35dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="In base ai secondi:"
        android:id="@+id/testo2"
        android:layout_gravity="center"
        android:layout_marginBottom="180dp"
        android:singleLine="true"
        android:textIsSelectable="false"
        android:textSize="25dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2"
        android:id="@+id/button1"
        android:layout_gravity="center"
        android:layout_marginTop="-130dp"
        android:layout_marginLeft="-100dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="5"
        android:id="@+id/button2"
        android:layout_gravity="center"
        android:layout_marginTop="-130dp"
        android:layout_marginLeft="0dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="10"
        android:id="@+id/button3"
        android:layout_gravity="center"
        android:layout_marginTop="-130dp"
        android:layout_marginLeft="100dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="20"
        android:id="@+id/button4"
        android:layout_gravity="center"
        android:layout_marginTop="-80dp"
        android:layout_marginLeft="-100dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="30"
        android:id="@+id/button5"
        android:layout_gravity="center"
        android:layout_marginTop="-80dp"
        android:layout_marginLeft="0dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="60"
        android:id="@+id/button6"
        android:layout_gravity="center"
        android:layout_marginTop="-80dp"
        android:layout_marginLeft="100dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Inserisci secondi:"
        android:id="@+id/testo3"
        android:layout_gravity="center"
        android:layout_marginTop="0dp"
        android:textSize="25dp"
        android:textColor="@color/nero" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start"
        android:id="@+id/start"
        android:layout_gravity="center"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="40dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/insNumeri"
        android:layout_gravity="center"
        android:layout_marginLeft="-50dp"
        android:maxLength="5"
        android:numeric="integer"
        android:textColor="@color/nero"
        android:layout_marginTop="40dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Infinito"
        android:id="@+id/infinito"
        android:layout_gravity="center"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="120dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Tempo rimanente: 0s"
        android:id="@+id/tempoRimanente"
        android:layout_gravity="center"
        android:layout_marginTop="170dp"
        android:textColor="@color/nero"
        android:textSize="25dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Stop"
        android:id="@+id/stop"
        android:layout_gravity="center"
        android:layout_marginLeft="0dp"
        android:clickable="false"
        android:enabled="false"
        android:focusable="false"
        android:layout_marginTop="220dp" />

</FrameLayout>
