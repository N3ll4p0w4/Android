<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:layout_marginBottom="5dp"
    android:layout_marginTop="5dp"
    android:background="@android:color/holo_red_light">

    <Button
        android:id="@+id/joinLobby"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="14dp"
        android:layout_marginRight="14dp"
        android:text="Join" />

    <TextView
        android:id="@+id/nomeLobby"
        android:layout_width="250dp"
        android:layout_height="27dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/joinLobby"
        android:layout_marginLeft="11dp"
        android:layout_marginStart="11dp"
        android:text="TextView"
        android:textColor="@android:color/black"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/nPlayerLobby"
        android:layout_width="wrap_content"
        android:layout_height="19dp"
        android:layout_alignLeft="@+id/nomeLobby"
        android:layout_alignStart="@+id/nomeLobby"
        android:layout_below="@+id/nomeLobby"
        android:text="TextView"
        android:textColor="@android:color/black" />
</RelativeLayout>