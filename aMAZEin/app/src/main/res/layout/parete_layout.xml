<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/stanza"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipToPadding="false">

    <ImageView
        android:id="@+id/pareti"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:clipChildren="false"
        android:visibility="invisible"
        app:srcCompat="@drawable/pareti_stanze" />

    <ImageView
        android:id="@+id/portasopra"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipChildren="false"
        android:rotation="0"
        android:visibility="invisible"
        app:srcCompat="@drawable/copri_parete_sopra" />

    <ImageView
        android:id="@+id/portasotto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/transparent"
        android:clipChildren="false"
        android:rotation="180"
        android:visibility="invisible"
        app:srcCompat="@drawable/copri_parete" />

    <ImageView
        android:id="@+id/portadestra"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/transparent"
        android:clipChildren="false"
        android:rotation="90"
        android:visibility="invisible"
        app:srcCompat="@drawable/copri_parete" />

    <ImageView
        android:id="@+id/portasinistra"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/transparent"
        android:clipChildren="false"
        android:rotation="270"
        android:visibility="invisible"
        app:srcCompat="@drawable/copri_parete" />

</RelativeLayout>